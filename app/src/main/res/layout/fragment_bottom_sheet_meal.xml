<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentIdBS"
        tools:context=".fragments.BottomSheetMealFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:padding="@dimen/_3sdp"
                android:scaleType="centerCrop"
                android:id="@+id/mealImg"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:background="@color/white" />

        <androidx.appcompat.widget.LinearLayoutCompat

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:paddingLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/mealArea"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:text="Palestine"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black" />

                <TextView
                        android:id="@+id/mealCategory"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_category_24"
                        android:text="Beef"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/meealName"
                    android:text="Meal Name"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/black" />

            <TextView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read more ..."
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/black" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>